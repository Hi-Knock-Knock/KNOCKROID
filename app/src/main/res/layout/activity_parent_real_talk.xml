<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_parent_real_talk_background"
    tools:context=".parent_layout.ParentRealTalkActivity">
    <Button
        android:id="@+id/real_talk_btn_hamburger"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_hamburger"
        android:layout_marginTop="19dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/real_talk_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="대화/질문하기"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/real_talk_btn_hamburger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/real_talk_btn_hamburger" />

    <ImageView
        android:id="@+id/char_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="205dp"
        android:src="@drawable/ic_parent_talk_dam_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/real_talk_txt_title" />

    <ImageView
        android:id="@+id/ic_talk_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_parent_talk_link"
        app:layout_constraintBottom_toBottomOf="@+id/char_profile_img"
        app:layout_constraintEnd_toStartOf="@+id/mem_profile_img"
        app:layout_constraintStart_toEndOf="@+id/char_profile_img"
        app:layout_constraintTop_toTopOf="@+id/char_profile_img" />


    <ImageView
        android:id="@+id/mem_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:src="@drawable/ic_parent_talk_men_profile"
        app:layout_constraintBottom_toBottomOf="@+id/char_profile_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/char_profile_img"
        app:layout_constraintTop_toTopOf="@+id/char_profile_img" />

    <TextView
        android:id="@+id/real_talk_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="짱구가\n대화를 요청했습니다"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/mem_profile_img"
        app:layout_constraintStart_toStartOf="@+id/char_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/ic_talk_link" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_parent_refusal_button_up"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/mem_profile_img"
        app:layout_constraintStart_toStartOf="@+id/char_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/real_talk_txt_info">

        <TextView
            android:id="@+id/real_talk_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="제한시간 안에 응답해주세요"
            android:textColor="#252525"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/alarm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/ic_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/ic_parent_alarm" />

            <TextView
                android:id="@+id/time"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:text="01 : 30"
                android:textColor="#252525"
                android:textSize="27sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btn_real_talk_false"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down"
            android:text="거절"
            android:textColor="#ff3e18"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/real_talk_box"
            tools:layout_editor_absoluteX="46dp" />

        <Button
            android:id="@+id/btn_real_talk_true"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down2"
            android:text="수락"
            android:textColor="#252525"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>