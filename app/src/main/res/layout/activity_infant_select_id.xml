<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_infant_splash_bg"
    tools:context=".infant.setting.view.InfantSelectIdActivity">


    <LinearLayout
        android:id="@+id/mode_infant_btn"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button1"
                android:layout_width="128dp"
                android:layout_height="154dp"
                android:background="@drawable/bg_whitebox_14dp"
                android:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:text="윤하"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/button1"
                app:layout_constraintEnd_toEndOf="@+id/button1"
                app:layout_constraintStart_toStartOf="@+id/button1"
                app:layout_constraintTop_toBottomOf="@+id/id_image1" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/id_image1"
                android:layout_width="112dp"
                android:layout_height="102dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_infant_select_id"
                android:backgroundTint="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_select_id_idle1"
                app:layout_constraintBottom_toBottomOf="@+id/button1"
                app:layout_constraintEnd_toEndOf="@+id/button1"
                app:layout_constraintStart_toStartOf="@+id/button1"
                app:layout_constraintTop_toTopOf="@+id/button1"
                app:riv_corner_radius="14dp" />


            <ImageView
                android:id="@+id/button2"
                android:layout_width="128dp"
                android:layout_height="154dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/bg_whitebox_14dp"
                android:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="@+id/button1"
                app:layout_constraintStart_toEndOf="@+id/button1"
                app:layout_constraintTop_toTopOf="@+id/button1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:text="윤지"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/id_image2" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/id_image2"
                android:layout_width="112dp"
                android:layout_height="102dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/bg_infant_select_id"
                android:backgroundTint="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_select_id_idle1"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2"
                app:riv_corner_radius="14dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>