<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="#CC000000"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="320dp"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bg_parent_refusal_button_up"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="실시간 대화 거절"
                android:textColor="#252525"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/refusal_alarm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/refusal_ic_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_parent_alarm" />

            <TextView
                android:id="@+id/refusal_time"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="01 : 30"
                android:textColor="#252525"
                android:textSize="27sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="선택한 질문"
            android:textColor="#252525"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/select_q_txt_dlg1"
            android:layout_width="281dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="엄마 아빠랑 싸우면 기분이 어때?"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_chatbox_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="를 보내시겠습니까?"
                android:textColor="#252525"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/modify_select_q_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="94dp"
                android:layout_marginTop="8dp"
                android:text="수정하기"
                android:textColor="#252525"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/btn_select_false"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down"
            android:text="취소"
            android:textColor="#ff3e18"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/real_talk_box"
            tools:layout_editor_absoluteX="46dp" />

        <Button
            android:id="@+id/btn_select_true"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down2"
            android:text="확인"
            android:textColor="#252525"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

