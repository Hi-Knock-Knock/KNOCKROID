<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/talk_drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".parent_layout.ParentTalkFragment"
    android:background="@drawable/img_main_background">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/talk_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="#5375FF"
        app:headerLayout="@layout/parent_drawer_header"
        app:menu="@menu/drawer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/talk_btn_hamburger"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_hamburger"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/talk_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화/질문하기"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/talk_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실시간 대화가,\n불가능할 경우\n보낼 질문을 골라주세요!"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginStart="25dp"
            android:layout_marginTop="85dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/talk_btn_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_questionmark"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_constraint"
            android:layout_width="0dp"
            android:layout_height="471dp"
            android:background="@drawable/bg_whitebox"
            android:layout_marginTop="21dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/talk_txt_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/talk_txt_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택한 질문"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/talk_txt_selected_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/talk_txt_question"
                app:layout_constraintStart_toStartOf="@id/talk_txt_question"/>
            <LinearLayout
                android:id="@+id/talk_linear_division"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#ffcd69"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/talk_txt_selected_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/talk_txt_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문 목록"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/talk_linear_division"
                app:layout_constraintStart_toStartOf="@id/talk_linear_division"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="320dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintStart_toStartOf="@id/talk_txt_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/talk_txt_list"
                app:layout_constraintBottom_toBottomOf="parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/talk_radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="없음" />
                            <RadioButton
                                android:id="@+id/rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="엄마랑 아빠랑 싸우면 기분이 어때?"/>
                            <RadioButton
                                android:id="@+id/rb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="동생은 어떤 존재야?"/>
                            <RadioButton
                                android:id="@+id/rb4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="동생이랑 노는 거 즐거워?"/>
                            <RadioButton
                                android:id="@+id/rb5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="엄마가 어떻게 해줬으면 좋겠어?"/>
                            <RadioButton
                                android:id="@+id/rb6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="아빠한테 속상한 거 있어?"/>
                            <RadioButton
                                android:id="@+id/rb7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="엄마한테 속상한 거 있어?" />
                            <RadioButton
                                android:id="@+id/rb8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="엄마랑 아빠랑 싸우면 기분이 어때?"/>
                            <RadioButton
                                android:id="@+id/rb9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="동생은 어떤 존재야?"/>
                            <RadioButton
                                android:id="@+id/rb10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="동생이랑 노는 거 즐거워?"/>
                            <RadioButton
                                android:id="@+id/rb11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="엄마가 어떻게 해줬으면 좋겠어?"/>
                            <RadioButton
                                android:id="@+id/rb12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="아빠한테 속상한 거 있어?"/>
                        </RadioGroup>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/talk_btn_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_select_btn"
            android:text="저장하기"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/talk_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>