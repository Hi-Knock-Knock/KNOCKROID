<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="#CC000000"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="320dp"
        android:layout_height="394dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_parent_refusal_button_up"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="실시간 대화 거절"
                android:textColor="#252525"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/refusal_alarm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/refusal_ic_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_parent_alarm" />

            <TextView
                android:id="@+id/refusal_time"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="01 : 30"
                android:textColor="#252525"
                android:textSize="27sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="선택한 질문"
            android:textColor="#252525"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/select_q_txt"
            android:layout_width="281dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="없음"
            android:textStyle="bold"
            android:textColor="#252525"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_chatbox_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:text="를 보내시겠습니까?"
            android:textColor="#252525"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="192dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/select_q_radiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp">

                        <RadioButton
                            android:id="@+id/qrb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="없음"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄마랑 아빠랑 싸우면 기분이 어때?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동생은 어떤 존재야?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동생이랑 노는 거 즐거워?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄마가 어떻게 해줬으면 좋겠어?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아빠한테 속상한 거 있어?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄마한테 속상한 거 있어?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄마랑 아빠랑 싸우면 기분이 어때?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동생은 어떤 존재야?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동생이랑 노는 거 즐거워?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄마가 어떻게 해줬으면 좋겠어?"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/qrb12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아빠한테 속상한 거 있어?"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_false2"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down"
            android:text="취소"
            android:textColor="#ff3e18"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/real_talk_box"
            tools:layout_editor_absoluteX="46dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_true2"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_parent_refusal_button_down2"

            android:text="확인"
            android:textColor="#252525"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

