<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="txtTitle"
            type="String" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_whitebox_10dp">

        <TextView
            android:id="@+id/talk_submit_dialog_txt_title"
            setUnderLine="@{txtTitle}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="84dp"
            android:layout_marginTop="16dp"
            android:textColor="#252525"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_submit_dialog_constraint_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_txt_title">

            <ImageView
                android:id="@+id/talk_submit_dialog_img_alarm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_parent_alarm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/talk_submit_dialog_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="01 : 30"
                android:textColor="#252525"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/talk_submit_dialog_img_alarm"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/talk_submit_dialog_txt_title_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="선택한 질문"
            android:textColor="#252525"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_constraint_time" />

        <TextView
            android:id="@+id/talk_submit_dialog_txt_selected_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="없음"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/talk_submit_dialog_txt_title_selected"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_txt_title_selected" />

        <View
            android:id="@+id/talk_submit_dialog_view"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginEnd="20dp"
            android:background="#ffcd69"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/talk_submit_dialog_txt_selected_question"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_txt_selected_question" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_submit_dialog_constraint_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_view">

            <TextView
                android:id="@+id/talk_submit_dialog_txt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전송되었습니다."
                android:textColor="#252525"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_check"
                app:layout_constraintBottom_toBottomOf="@id/talk_submit_dialog_txt_submit"
                app:layout_constraintEnd_toStartOf="@id/talk_submit_dialog_txt_submit"
                app:layout_constraintTop_toTopOf="@id/talk_submit_dialog_txt_submit" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/talk_submit_dialog_view_horizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="#d6d6d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_constraint_submit" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_submit_dialog_constraint_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_submit_dialog_view_horizontal">

            <TextView
                android:id="@+id/talk_submit_dialog_txt_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="60dp"
                android:paddingVertical="12dp"
                android:text="확인"
                android:textColor="#252525"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>