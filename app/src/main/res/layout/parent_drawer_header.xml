<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/img_drawer_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/img_drawer_profile"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="윤하윤지맘"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:fontFamily="@font/scdream5"
        app:layout_constraintTop_toBottomOf="@id/drawer_img"
        app:layout_constraintStart_toStartOf="@id/drawer_img"
        app:layout_constraintEnd_toEndOf="@id/drawer_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>