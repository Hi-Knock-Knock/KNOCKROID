<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.LoginActivity"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/login_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:text="똑똑"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/login_linear_white"
        android:layout_width="355dp"
        android:layout_height="214dp"
        android:orientation="vertical"
        android:background="@drawable/bg_login_up"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/login_txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/login_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:textColor="#000000"
            android:text="아이디"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/login_edt_id"
            android:background="@drawable/bg_login_edt"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:hint="email을 입력해주세요."
            android:textColorHint="#858585"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/login_txt_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:textColor="#000000"
            android:text="비밀번호"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/login_edt_pw"
            android:background="@drawable/bg_login_edt"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:hint="비밀번호를 입력해주세요."
            android:textColorHint="#858585"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:text="로그인"
        android:textSize="20sp"
        android:background="@drawable/bg_login_down"
        app:layout_constraintTop_toBottomOf="@id/login_linear_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/login_btn_google"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_google"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn_login"
        app:layout_constraintEnd_toStartOf="@id/login_btn_naver"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/login_btn_naver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_naver"
        app:layout_constraintTop_toBottomOf="@id/login_btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/login_btn_kakao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_kakao"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn_login"
        app:layout_constraintStart_toEndOf="@id/login_btn_naver"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn_naver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처음이신가요?"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>