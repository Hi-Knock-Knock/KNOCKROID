<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_notice_child_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_profile_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_notice_child_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:text="짱구가 대화를 요청 했습니다."
        android:textColor="#252525"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/item_notice_child_img"
        app:layout_constraintTop_toTopOf="@id/item_notice_child_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13시45분"
        android:textColor="#252525"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_notice_child_img"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>