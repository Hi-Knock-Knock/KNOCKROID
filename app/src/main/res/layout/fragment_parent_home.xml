<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".parent_layout.ParentHomeFragment"
    android:background="@drawable/fragment_background1">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_hamburger"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/home_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짱구짱아맘 님,\n10월 08일 자녀분의\n하루입니다."
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginStart="25dp"
        android:layout_marginTop="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parent_home_rcv"
        android:layout_width="0dp"
        android:layout_height="545dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        tools:listitem="@layout/rcv_parent_home"
        app:layout_constraintTop_toBottomOf="@id/home_txt_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>