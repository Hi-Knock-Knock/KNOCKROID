<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infant_select_person"
    android:layout_width="360dp"
    android:layout_height="760dp"
    android:background="@drawable/img_infant_home_day_bg"
    tools:context=".infant_layout.InfantSelectFeelActivity">

    <ImageView
        android:id="@+id/infant_talk1"
        android:layout_width="280dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/char_dam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        android:src ="@drawable/ic_infant_chatbox2"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/talk_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="누구와 있었던 일이야?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/infant_talk1"
        app:layout_constraintEnd_toEndOf="@+id/infant_talk1"
        app:layout_constraintStart_toStartOf="@+id/infant_talk1"
        app:layout_constraintTop_toTopOf="@id/infant_talk1"
        app:layout_constraintVertical_bias="0.263" />

    <ImageView
        android:id="@+id/char_dam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/img_char_dam" />


    <ImageView
        android:id="@+id/infant_icon_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_infant_img_gift" />

    <ImageView
        android:id="@+id/infant_cookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_infant_home_cookie" />

    <TextView
        android:id="@+id/infant_home_cookie_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="5개"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/infant_cookie"
        app:layout_constraintEnd_toEndOf="@+id/infant_cookie"
        app:layout_constraintTop_toTopOf="@+id/infant_cookie" />

    <LinearLayout
        android:id="@+id/infant_feel_emjbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_infant_emj_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infant_talk1">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <TableRow>
                <ImageView
                    android:id="@+id/infant_emj_person_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:src="@drawable/ic_infant_emj_person_me" />
                <ImageView
                    android:id="@+id/infant_emj_person_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_infant_emj_person_secret"
                    android:layout_marginRight="39dp"/>
                <ImageView
                    android:id="@+id/infant_emj_person_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_infant_emj_person_teacher"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/infant_emj_person_1_txt"
                    android:layout_marginRight="39dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="나혼자"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/infant_emj_person_2_txt"
                    android:layout_marginRight="39dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="비밀이야"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/infant_emj_person_3_txt"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="선생님"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
            <TableRow>
                <ImageView
                    android:id="@+id/infant_emj_person_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_infant_emj_person_friend" />
                <ImageView
                    android:id="@+id/infant_emj_person_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_infant_emj_person_family"
                    android:layout_marginLeft="15dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/infant_emj_person_4_txt"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="친구"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/infant_emj_person_5_txt"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="가족"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>