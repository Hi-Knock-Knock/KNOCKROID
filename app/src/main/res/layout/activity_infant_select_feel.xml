<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infant_select_feel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_infant_home_morning_bg"
    tools:context=".infant.talk.view.InfantSelectFeelActivity">


    <ImageView
        android:id="@+id/char_dam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="207dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_char_knock" />


    <ImageView
        android:id="@+id/infant_talk1"
        android:layout_width="239dp"
        android:layout_height="75dp"
        android:layout_marginBottom="344dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_infant_chatbox2"
        app:layout_constraintBottom_toBottomOf="@+id/char_dam"
        app:layout_constraintEnd_toEndOf="@+id/char_dam"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/char_dam" />

    <TextView
        android:id="@+id/talk_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="오늘 기분이 어때?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/infant_talk1"
        app:layout_constraintEnd_toEndOf="@+id/infant_talk1"
        app:layout_constraintStart_toStartOf="@+id/infant_talk1"
        app:layout_constraintTop_toTopOf="@id/infant_talk1"
        app:layout_constraintVertical_bias="0.263" />

    <LinearLayout
        android:id="@+id/infant_feel_emjbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/ic_infant_emj_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infant_talk1">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="60dp">

            <TableRow>

                <ImageView
                    android:id="@+id/infant_emj_feel_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="45dp"
                    android:src="@drawable/ic_infant_emj_feel_happy" />

                <ImageView
                    android:id="@+id/infant_emj_feel_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="45dp"
                    android:src="@drawable/ic_infant_emj_feel_nice" />

                <ImageView
                    android:id="@+id/infant_emj_feel_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_infant_emj_feel_soksang" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/infant_emj_feel_1_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_horizontal"
                    android:text="기뻐"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infant_emj_feel_2_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_horizontal"
                    android:text="신나"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infant_emj_feel_3_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="속상해"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/infant_emj_feel_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/ic_infant_emj_feel_sad" />

                <ImageView
                    android:id="@+id/infant_emj_feel_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/ic_infant_emj_feel_scared" />

                <ImageView
                    android:id="@+id/infant_emj_feel_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_infant_emj_feel_angry" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/infant_emj_feel_4_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_horizontal"
                    android:text="슬퍼"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infant_emj_feel_5_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_horizontal"
                    android:text="무서워"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infant_emj_feel_6_txt"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="화나"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>


        <!--        <ImageView-->
        <!--            android:id="@+id/imageView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:srcCompat="@drawable/infant_emj_feel_1" />-->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>