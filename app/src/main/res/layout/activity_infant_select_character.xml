<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infant_layout.InfantSelectCharacterActivity"
    android:background="@drawable/img_splash_background">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/infant_viewpager_select"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_marginBottom="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>


    <Button
        android:id="@+id/select_btn_back"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_infant_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_select_char_btn"
        app:layout_constraintEnd_toEndOf="@+id/infant_viewpager_select"
        app:layout_constraintStart_toStartOf="@+id/infant_viewpager_select"
        app:layout_constraintTop_toBottomOf="@+id/infant_viewpager_select" />

    <Button
        android:id="@+id/select_btn_left"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_select_left"
        android:layout_marginStart="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/select_btn_right"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_select_right"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>